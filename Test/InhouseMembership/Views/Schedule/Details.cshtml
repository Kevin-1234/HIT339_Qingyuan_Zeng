@model InhouseMembership.Models.Schedule
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Schedule</h4>
    <hr />
    <dl class="row">
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            Coach Name
        </dt>
        <!-- get the coach name by passing coach id into UserManager -->
        <dd class="col-sm-10">
            <a asp-action="CoachDetails" asp-route-id="@Model.CoachId">@Html.DisplayFor(model => UserManager.FindByIdAsync(model.CoachId).Result.Email)</a>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="CreateEnrollment" asp-route-id="@Model.ScheduleId">Enroll</a>
    <a asp-action="Edit" asp-route-id="@Model.ScheduleId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
